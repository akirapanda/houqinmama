
<%= render "shared/error_messages",:target=>resource%>


<div id='wrapper'>
    <div class='application'>
        <div class='application-content'>
            <a href="sign_in.html"><div class='icon-heart'></div>
              <span>后勤妈妈-上理果园</span>
            </a>
        </div>
    </div>
    <div class='controls'>
        <div class='caret'></div>
        <div class='form-wrapper'>
            <h1 class='text-center'>新用户注册</h1>
					  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /></div>
                <div class='row-fluid'>
                    <div class='span12 icon-over-input'>
									    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address',:class=>"span12" %>
	
                        <i class='icon-user muted'></i>
                    </div>
                </div>
                <div class='row-fluid'>
                    <div class='span12 icon-over-input'>
									    <%= f.password_field :password, :placeholder => 'Password',:class=>"span12" %>
                        <i class='icon-lock muted'></i>
                    </div>
                </div>
                <div class='row-fluid'>
                    <div class='span12 icon-over-input'>
									    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation',:class=>"span12" %>
                        <i class='icon-lock muted'></i>
                    </div>
                </div>
                <label class="checkbox" for="agreement"><input id="agreement" name="agreement" type="checkbox" value="1" />
                    I accept
                    <a href="#" class="text-contrast">user agreements</a>
                </label>
						    <%= f.submit "注册",:class=>'btn btn-block' %>

						<% end %>
            <div class='text-center'>
                <hr class='hr-normal' />
							  <%= render "devise/shared/links" %>

            </div>
        </div>
    </div>
    <div class='login-action text-center'>
        <a href="forgot_password.html"><i class='icon-lock'></i>
        </a>
    </div>
</div>


<script>
$("body").addClass('contrast-fb sign-up contrast-background');
</script>