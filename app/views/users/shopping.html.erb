<h2>我的历史订单</h2>

<div id="goods_container" class="container shadow">
<div class="goods_head">
		<ul id="myTab" class="nav nav-pills">
		  <li ><%=link_to "个人信息",current_user%></li>
		  <li class="active" ><%=link_to "订单信息",shopping_user_path(current_user)%></li>
		  <li ><%=link_to "购物记录",history_buy_user_path(current_user)%></li>
		
		</ul>
</div>
<div class="goods_body">
	<div class="row">
		<div class="span12">
			<div id="main" class="history-table">
				
				<table class="table">
					<thead>
						<tr>
							<th>订单号</th>
							
							<th>下单时间</th>
							<th>数量</th>
							<th>总价</th>
							<th>操作</th>
							
						</tr>
					</thead>
					<tbody>
					<%@shoppings.each do |shopping|%>
						<tr>
							<td><%=link_to shopping.id, shopping%></td>
							<td class="center"><%=I18n.localize( shopping.created_at,:format=>:long)%></td>
							<td><%=shopping.shopping_items.count%></td>
							<td><%=number_to_currency(shopping.amount,:unit=>"&yen")%></td>
							<td><%=link_to "查看订单信息", shopping%></td>
						</tr>					
					<%end%>
					</tbody>
					
				</table>
			</div>

		</div>
		<div id="sidebar" class="span3">
		</div>
</div>

</div>
