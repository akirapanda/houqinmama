<%=render 'shared/error_messages',:target=>@article%>

<%=simple_form_for([:admin,@article],:html=>{:class=>"form-horizontal"}) do |f|%>
	<%= f.input :title,:input_html=>{:class=>"input-xxlarge"}%>
	<%= f.input :keywords,:input_html=>{:class=>"input-xxlarge"}%>	
	<%= f.input :breif,:input_html=>{:class=>"input-xxlarge"}%>	
	<%= f.input :cover%>
	
	<%= f.input :hidden%>
	
	
	<%= f.input :content%>
	
	<div class="form-actions">
		<button type="submit" class="btn btn-primary">保存</button> 
		<button class="btn">取消</button>
	</div> <!-- /form-actions -->
<%end%>
