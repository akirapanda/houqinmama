<h2>订单编号 # <%=@shopping.id%></h2>
<h3>商品清单</h3>
<div class="cart-list radius mc">

<table class="table">
	<thead>
		<tr>
			<th>图片</th>
			<th>商品名称</th>
			<th>价格</th>
			<th>数量</th>
			<th>小计</th>
		</tr>
	</thead>
	<tbody>
		<%@shopping.shopping_items.each do |item|%>		
			<tr>
				<td>
					<%=link_to [:mobile,item.product] do%>
						<%=image_tag item.product.good.icon_url(:mobile),:class=>"pay_img",:width=>"50"%>
					<%end%>
				</td>
				<td>
					<%=link_to [:mobile,item.product]  ,:class=>"f6" do%>
						<%=item.name%>
					<%end%>
				</td>
				<td>
					<p class="p-price" id="price"><%=number_to_currency item.price,:unit=>"&yen"%></p>
				</td>
				<td>
					<%=item.quantity%> <%=item.unit%>
				</td>
				<td>
						<p class="p-price"><span class="red" id="price<%=item.id%>"><%=number_to_currency item.amount,:unit=>"&yen"%></span></p>
				</td>
			</tr>
		<%end%>
	</tbody>
</table>

</div>	

<div class="pay-tip">
	<p>购物金额：<span id="total_amount"><%=number_to_currency @shopping.amount,:unit=>"&yen"%></span>
	</p>
</div>		

<hr/>

<h3>联系方式</h3>		
<div class="good-detail sift-mg">

<ul class="mu_lw">
	<li >
		<span class="mu_lh">收件人姓名:</span>
		<span class="mu_lc"><%=@shopping.customer_name%></span>
	</li>
	<li>
		<span class="mu_lh">收件地址:</span>
		<span class="mu_lc"><%=@shopping.customer_address%></span>
	</li>
	<li>
		<span class="mu_lh">送货时间:</span>
		<span class="mu_lc"><%=@shopping.ship_time%></span>
	</li>
	<li>
		<span class="mu_lh">联系方式:</span>
		<span class="mu_lc"><%=@shopping.mobile%></span>
	</li>
	<li>
		<span class="mu_lh">备注:</span>
		<span class="mu_lc"><%=@shopping.remark%></span>
	</li>
	<li>
		<span class="mu_lh">下单时间:</span>
		<span class="mu_lc"><%=l @shopping.created_at,:format=>:long%></span>
	</li>
</ul>
</div>