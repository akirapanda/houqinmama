<div class="row-fluid">
			<div class="span12">

					<div class="row-fluid">
						<div class="span9">
							<h2><%=@product.name%></h2>
						</div>
						<div class="span3">
							<div class="social-icons pull-right">

							</div>
						</div>
					</div>

					<div class="row-fluid product-detail">

						<div class="span4">
							<a class="product-detail-lightbox colorbox hidden-phone" rel="colorbox1" href="<%=@product.good.icon_url(:large)%>" title="封面">
								<img class="product-image" alt="Product A" src="<%=@product.good.icon_url(:large)%>">
							</a>
						</div>

						<div class="span1">
							<ul class="thumbnails main-product">
								<%@product.good.goods_images.each do |photo|%>
								<li class="span12">
									<a rel="colorbox1" href="<%=photo.cover_url(:normal)%>" class="colorbox thumbnail">
										<img alt="配图" src="<%=photo.cover_url(:normal)%>" />
									</a>
								</li>
								<%end%>
							</ul>
						</div>

						<div class="span7 well">

							<div class="row-fluid">

								<div class="span7">
									<strong>品名:</strong> <span><%=@product.name%></span><br>
									<strong>分类:</strong> <span>
										<%=@product.goods_cate.parent_goods_cate.name%>/<%=@product.goods_cate.name%></span><br>
									
									<strong>简介:</strong> <span><%=@product.brief%></span><br>
									<strong>重量:</strong> <span><%=@product.weight%></span><br>
									<strong>价格:</strong> <span><%=number_to_currency @product.price,:unit=>"&yen;"%>/<%= @product.unit%></span><br>
									
								</div>

								<div class="span5">
									<span class="label label-info price">
										<%=number_to_currency @product.price,:unit=>"&yen;"%>/<%= @product.unit%>
									</span>
								</div>

							</div>

							<div class="row-fluid">
								<div class="span12">
									<br>
									<h3>商品介绍</h3>
										<%= raw @product.intro%>
									<hr>
								</div>
							</div>

							<div class="row-fluid">

								<div class="span3">
									
									<%= link_to products_path ,:class=>"btn" do%>
									<i class="icon-chevron-left"></i> 返回
									<%end%>
								</div>

	
								<div class="span6">

				
										<%= form_for(ShoppingItem.new ,:html=>{:class=>'form-inline'}) do |f| %>
	                  	<%=f.hidden_field :product_id,:value=>@product.id%>
											<label  class="control-label">数量</label>
	                 		<input value="<%=@product.id%>" name="product_id" class="hide"/>
	
	             				 <select class="input-mini" name="count">
												<option value="1">1</option>
												<option value="2">2</option>
												<option value="3">3</option>
												<option value="4">4</option>
												<option value="5">5</option>
											</select>
		                 		<%=f.submit "加入购物车",:class=>'btn btn-primary'%>
	                 <%end%>
								</div>
							</div>
						</div>

					</div>

			</div>
</div>