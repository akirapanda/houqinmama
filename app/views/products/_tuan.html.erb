<div class="row-fluid">
			<div class="span12">

					<div class="row-fluid">
						<div class="span10">
							<h1><%=@product.name%> <small><%=@product.content%></small></h1>
						</div>
					</div>

					<div class="row-fluid product-detail">

						<div class="span4">
							<a class="product-detail-lightbox colorbox hidden-phone" rel="colorbox1" href="<%=@product.cover_url(:large)%>" title="封面">
								<img class="product-image" alt="Product A" src="<%=@product.cover_url(:large)%>">
							</a>
						</div>
						<div class="span1">
							<ul class="thumbnails main-product">
								<%@product.photo.each do |photo|%>
								<li class="span12">
									<a rel="colorbox1" href="<%=photo.image_url(:normal)%>" class="colorbox thumbnail">
										<img alt="配图" src="<%=photo.image_url(:normal)%>" />
									</a>
								</li>
								<%end%>
							</ul>
						</div>


						<div class="span7 well">



							<div class="row-fluid">

								<div class="span7">
								 		<h3><strong>品名:</strong> <span><%=@product.name%></span></h3>
									<h3><strong>价格:</strong> <span><%=number_to_currency @product.price,:unit=>"&yen;"%>/<%= @product.unit%></span></h3>
									
								</div>

								<div class="span5">
										<span class="label label-important price price-over"><%=number_to_currency @product.price,:unit=>"&yen;"%>/<%= @product.unit%></span>

								</div>

							</div>
							<div class="row-fluid">

								<h4>离本次团购结束，还有</h4>

								<div class="span12">
									 <div id="counter"></div>
										<div class="desc">
										<div>天</div>

								   <div>小时</div>
								   <div>分</div>
								   <div>秒</div>
								 	</div>
								</div>
							</div>
							<div class="row-fluid">
							
								<div class="span6">
								<p>	已经有 <span class="badge badge-success"><%=@product.success_shopping_items.size%></span> 名小伙伴参加了这次团购</p>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span6 pull-right">
												<%= form_for(ShoppingItem.new ,:html=>{:class=>'form-inline'}) do |f| %>
								        	<%=f.hidden_field :product_id,:value=>@product.id%>
													<label  class="control-label">数量</label>
								       		<input value="<%=@product.id%>" name="product_id" class="hide"/>

								   				 <select class="input-mini" name="count">
														<option value="1">1</option>
														<option value="2">2</option>
														<option value="3">3</option>
														<option value="4">4</option>
														<option value="5">5</option>
													</select>
								         		<%=f.submit "加入购物车",:class=>'btn btn-primary btn-large'%>
								       <%end%>
									</div>
				
								
								</div>
							</div>
						</div>

					</div>

			</div>
</div>
<hr>

<div class="row-fluid">
	<div class="offset1 span10">
		<h3>商品介绍</h3>
		<p>
			<%= raw @product.body_html%>
		</p>
	</div>
</div>