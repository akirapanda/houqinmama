<%if @comments.size>0%>
<table class="table">
	<thead>
		<tr>
			<th>留言时间</th>
			<th>内容</th>
		</tr>
	</thead>
	<% @comments.each do |comment|%>
		<tr>
			<td><%=I18n.localize(comment.created_at,:format=>:long)%></td>
			<td><%=comment.body_html%></td>
		</tr>
	<%end%>

</table>
<%else%>

<p>暂无留言记录</p>
<%end%>



<p>留言发布框</p>
<div class="form">
<%= simple_form_for(@comment,:html=>{:class=>"form-horizontal"}) do |f| %>
<fieldset>
    <div class="controls">
	    <%= f.text_area :body_html,:id=>"post_body",:rows=>"3",:class=>"input-xxlarge" %>	
	</div>	
	<%=f.text_field :good_id, :value=>@product.id,:class=>"hide"%>
</fieldset>
	<div class="control-group">
  		<div class="controls">
    		<%= f.submit "提交" ,:class=>"btn btn-primary"%>
			<%= link_to '返回', goods_path,:class=>"btn" %>
  		</div>
	</div>
<% end %>
</div>